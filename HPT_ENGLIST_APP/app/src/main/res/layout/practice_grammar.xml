<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prac"
    android:padding="16dp"
    android:windowActionBar="false"
    tools:context=".ui.english_basic1.PracticeGrammar1">
    <TextView

        android:textSize="20sp"
        android:id="@+id/text_view_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textColor="@android:color/white" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/text_view_question_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_score"
        android:text="Question: 1/x"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="00:30"
        android:textColor="#83E313"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/tv_tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_view_question"
        android:layout_marginBottom="90sp"
        android:text="Set tittle"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/radio_group"
        android:layout_marginBottom="16dp"
        android:text="How do like that?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp" />
    <RadioGroup
        android:textSize="25sp"
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <RadioButton
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:id="@+id/radio_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1" />
        <RadioButton
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:id="@+id/radio_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2" />
        <RadioButton
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:id="@+id/radio_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3" />
    </RadioGroup>
    <Button
        android:textColor="#F49508"
        android:background="@drawable/boder_edittext"
        android:textSize="25sp"
        android:id="@+id/button_confirm_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="16dp"
        android:text="Confirm" />
</RelativeLayout>